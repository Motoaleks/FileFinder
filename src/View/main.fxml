    <ToolBar orientation="HORIZONTAL" pickOnBounds="false" BorderPane.alignment="CENTER_RIGHT">
      <items>
        <Label fx:id="lb_progressName" text="Label" />
        <ProgressBar fx:id="pb_progressStatus" prefWidth="200.0" progress="0.0" />
      </items>
    </ToolBar>
  </bottom>
  <center>
    <BorderPane prefHeight="200.0" prefWidth="200.0">
      <center>
        <HBox fx:id="lv_files" prefHeight="100.0" prefWidth="200.0">
          <children>
            <ListView disable="true" editable="false" orientation="VERTICAL" pickOnBounds="false" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
          </children>
          <padding>
            <Insets bottom="5.0" top="5.0" />
          </padding>
        </HBox>
      </center>
      <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
      </padding>
      <top>
        <HBox alignment="CENTER_LEFT" prefHeight="24.0" prefWidth="392.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT" BorderPane.margin="$x1">
          <children>
            <TextField fx:id="txt_search" prefHeight="24.0" prefWidth="200.0" />
            <RadioButton fx:id="rb_fileSearch" contentDisplay="LEFT" disable="false" mnemonicParsing="false" mouseTransparent="false" text="Search in file" textAlignment="LEFT" wrapText="true" />
          </children>
          <padding>
            <Insets fx:id="x1" />
          </padding>
        </HBox>
      </top>
    </BorderPane>
  </center>
  <top>
    <MenuBar useSystemMenuBar="true" visible="true">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Unspecified Action" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Delete" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
