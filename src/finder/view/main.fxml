                          layoutY="0.0" mnemonicParsing="false" onAction="#onSearch" prefHeight="24.0"
                          prefWidth="33.0" text="" textAlignment="RIGHT" wrapText="false"
                          fx:id="btn_Search"/>
                      </children>
                    </AnchorPane>
                    <CheckBox id="rb_searchInFile" mnemonicParsing="false" text="Search in file"
                      fx:id="cb_searchInFile"/>
                  </children>
                  <padding>
                    <Insets fx:id="x1"/>
                  </padding>
                </HBox>
              </top>
            </BorderPane>
          </content>
        </Tab>
        <Tab text="Indexes" fx:id="tab_indexes">
